{
  "name": "lhg_server",
  "version": "0.1.5",
  "description": "Prototype for LHG website",
  "main": "server.js",
  "scripts": {
    "server": "nodemon --exec babel-node ./server/server.js --require dotenv/config",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./server -s",
    "build": "npm run clean && npm run build-server",
    "start": "node ./build/server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "mrdoowan",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.843.0",
    "axios": "^0.21.1",
    "babel-preset-env": "^1.7.0",
    "bcrypt": "^5.0.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-http-to-https": "^1.1.4",
    "hashids": "^2.2.8",
    "mysql": "^2.18.1",
    "node-schedule": "^2.0.0",
    "random-js": "^2.1.0",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
